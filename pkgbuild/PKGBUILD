# Maintainer: Vilmar Catafesta <vcatafesta@gmail.com>

pkgname=umc
pkgdesc="Universal Modeline Calculator (UMC) - Calculadora de Modelines para Xorg"
pkgver=0.2
pkgrel=1
#depends=('')
#makedepends=('')
#optdepends=('')
#conflicts=('')
#provides=('')
#replaces=('')
arch=("x86_64")
url="https://sourceforge.net/projects/umc/"
license=("GPL")
depends=("gtk2")
makedepends=("git" "autoconf" "automake")
source=("git+https://github.com/chililinux/${pkgname}.git")
sha256sums=("SKIP")

# Automatically detect and use the correct install file
if [ -e "${pkgname}.install" ]; then
	install=${pkgname}.install
elif [ -e "pkgbuild.install" ]; then
	install=pkgbuild.install
fi

build() {
  cd "$srcdir/umc"
  autoreconf -fi  # Garante que os arquivos de configuração sejam gerados
  ./configure --prefix=/usr
  make
}

package() {
	cd "$srcdir/umc-$pkgver/src"
	install -Dm755 umc "$pkgdir/usr/bin/umc"

	# Install license file if present
	if [ -f "LICENSE" ]; then
		install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
	fi

	# Install documentation if present
	if [ -f "README.md" ]; then
		install -Dm644 README.md "${pkgdir}/usr/share/doc/${pkgname}/README.md"
	fi
}
